@model IEnumerable<CetStudentBook.Models.Book>
@{
    ViewData["Title"] = "Books";
}

<h1> Stocked Books </h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add a Book</a>
</p>

<table class="table table-striped table-hover">
<thead>
<tr>
    <th>Name of the Book</th>
    <th>Name of the Author</th>
    <th>Publish Date</th>
    <th>Page Count</th>
    <th>Is Second Hand?</th>
    <th>Actions</th>
</tr>
</thead>
<tbody>
@foreach (var item in Model) {
<tr>
    <td>@item.Name</td>
    <td>@item.Author</td>
    <td>@item.PublishDate.ToShortDateString()</td>
    <td>@item.PageCount</td>
    <td>@(item.IsSecondHand ? "Yes" : "No")</td>
    <td>
        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a> |
        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
    </td>
</tr>
}
</tbody>
</table>